{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build and debug active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-Wshadow",
                "-Wall",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                // "-fsanitize=address",
                // "-fsanitize=undefined",
                "-D_GLIBCXX_DEBUG"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "C/C++: g++ compile",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-Wshadow",
                "-Wall",
                "${file}",
                "-o",
                "${fileDirname}/a",
                "-O2",
                "-Wno-unused-result"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
            // "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}